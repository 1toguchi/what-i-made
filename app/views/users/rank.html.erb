<% @page_title = "ランキング" %>
<h3><%= @page_title %></h3>

<% if @user.present? %>

<%= %>
<table class="table table-hover", border="1">
  <tr>
    
    <th>順位</th>
    <th>今週の勉強時間　/ ユーザー名</th>
  </tr>
 
  <tr>
    <% @user.index_by{|h| "#{h.sum_by_a_week} 時間 / #{h.name}さん"}.keys.sort.reverse.each.with_index(1) do |user,i| %>
    <td><%= "#{i}位" %></td>
    <td><%=  "#{user}" %></td>


  </tr>
    <% end %>
</table>
<% else %>
<p>生徒がいません。</p>
<% end %>
