<% @page_title = "ログイン" %>
<h3><%= @page_title %></h3>
<%= render "shared/errors", obj: @user %>
<% if flash.alert %><p class="alert"><%= flash.alert %></p><% end %>
<%= form_tag :session do %>
<table id="login_form">
  <tr>
    <td style="text-align: right">ユーザー名：</td>
    <td><%= text_field_tag "name", "", style: "width: 120px",placeholder: "名前を入れてください"  %>

    <td style="text-align: right">パスワード：<%= password_field_tag "password", "", style: "width: 120px"　,placeholder: "パスワードを入れてください"  %>
    <td colspan="2" style="text-align: center">
    <div class="control-group">
    <div class="controls">
      <button class="btn">Sign in</button>
    </div>
  </div>

</table>
<% end %>